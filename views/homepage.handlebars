<main class="mt-5">
  <h1 class="mb-4 bg-slate-400 py-6 text-blue-800 text-6xl text-center">Tech Space Posts</h1>
  <div class="text-center">
    {{#each posts}}
      
        <div class="card mb-3">
          <div class="card-header">
            <h2 class="card-title">
              <a href="/post/{{id}}">{{title}}</a>
            </h2>
          </div>
          <div class="card-body text-yellow-400">
            Created by:
            <p class="text-green-300"> {{user.username}} </p>
            Date: <div class="text-black">{{format_date createdAt}}</div>
          </div>
        </div>
      
    {{/each}}
  </div>
</main>